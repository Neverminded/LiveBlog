@model MyBlog.Models.Categories

@{
    ViewBag.Title = "CreateCategory";
    if (HttpContext.Current.User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_adminlayout.cshtml";
    }

    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2>Новая категория</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Введите название категории</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.NameCategory)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NameCategory)
            @Html.ValidationMessageFor(model => model.NameCategory)
        </div>

        <p>
            <input type="submit" value="Создать" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Администрирование", "Index")
</div>
